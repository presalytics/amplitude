    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/amplitude/bin/Debug/netcoreapp3.1/amplitude.dll",
            "args": [],
            "cwd": "${workspaceFolder}/amplitude",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "envFile": "${workspaceFolder}/.env",
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}